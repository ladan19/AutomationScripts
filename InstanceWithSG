AWSTemplateFormatVersion: 2010-09-09

Resources:
  EC2Instance:
    Type: AWS::EC2::Instance
    Properties:
      ImageId: YourAMIID
      InstanceType: YourTypeInstance
      KeyName: YourKey
      SecurityGroups:
        - !Ref SG-SSH
  SG-SSH:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Security Group for SSH Access
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: '22'
          ToPort: '22'
          CidrIp: 0.0.0.0/0
